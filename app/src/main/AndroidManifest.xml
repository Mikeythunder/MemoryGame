<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mjzeolla.mindsEye">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity android:name="com.mjzeolla.mindsEye.SplashActivity" android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mjzeolla.mindsEye.DownloadActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name="com.mjzeolla.mindsEye.CreateActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />
        <activity
            android:name="com.mjzeolla.mindsEye.MainActivity"
            android:screenOrientation="portrait"
            android:statusBarColor="@color/black"
            android:theme="@style/NoActionBar">

        </activity>
    </application>

</manifest>